<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:id="@+id/GameCanvas">
    <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/txtScore" app:fontFamily="sans-serif"
            android:textSize="24sp" android:background="@android:color/holo_blue_light" android:layout_marginTop="5dp"
            android:layout_marginBottom="494dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/btnControl" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintHorizontal_bias="0.0"/>
    <ImageButton
            android:layout_width="97dp"
            android:layout_height="97dp" app:srcCompat="@mipmap/ic_launcher_round"
            android:id="@+id/imgMole"
            android:layout_marginTop="218dp" app:layout_constraintTop_toBottomOf="@+id/txtScore"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="137dp"
            android:layout_marginRight="137dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="177dp" android:layout_marginStart="177dp"
            app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginBottom="179dp" app:layout_constraintBottom_toTopOf="@+id/btnControl"/>
    <Button
            android:text="START"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/btnControl"
            app:layout_constraintTop_toBottomOf="@+id/txtScore" android:layout_marginBottom="4dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:textSize="24sp"/>
</android.support.constraint.ConstraintLayout>